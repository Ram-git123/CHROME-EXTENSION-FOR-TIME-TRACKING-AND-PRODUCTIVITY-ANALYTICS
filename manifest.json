{
  "manifest_version": 3,
  "name": "ByteBreak - Focus & Productivity Tracker",
  "version": "1.0.0",
  "description": "Track your productivity by monitoring time spent on productive vs unproductive websites",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icons16.png",
      "48": "icons/icons48.png",
      "128": "icons/icons128.png"
    }
  },
  "icons": {
    "16": "icons/icons16.png",
    "48": "icons/icons48.png",
    "128": "icons/icons128.png"
  }
}
